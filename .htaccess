# Enable rewrite engine
RewriteEngine On
RewriteBase /

# If the request is NOT a directory or file, but a .html version exists, rewrite internally
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# If no file, no directory, and no .html version exists, redirect to homepage
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html !-f
RewriteRule ^.*$ / [R=301,L]
